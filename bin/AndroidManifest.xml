<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barrel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait" >
        <activity
            android:name="com.barrel.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.barrel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.barrel.RaceStartActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barrel.ResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barrel.InstructionsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barrel.DisplayScoreActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="com.barrel.HighScoresListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barrel.SettingActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>